<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <%= form_with url: root_path, method: "GET" do |f| %>
          <%= f.text_field :q %>
          <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <%= render partial: 'repositories', repositories: @repositories %>
</div>